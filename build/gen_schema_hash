# Compute and output the SHA-256 hash of the schema file.
# This hash is embedded at compile time via -D flag and checked at runtime.

set -e

if [ $# -ne 1 ]; then
    echo "Usage: $0 <schema_file>" >&2
    exit 1
fi

SCHEMA_FILE="$1"

if [ ! -f "$SCHEMA_FILE" ]; then
    echo "Error: Schema file not found: $SCHEMA_FILE" >&2
    exit 1
fi

# Compute SHA-256 hash of the schema file
# Use sha256sum on Linux
if command -v sha256sum >/dev/null 2>&1; then
    sha256sum "$SCHEMA_FILE" | awk '{print $1}'
else
    echo "Error: sha256sum not found" >&2
    exit 1
fi
